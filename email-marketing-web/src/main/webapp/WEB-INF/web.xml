<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Email Marketing Web Application</display-name>
    <description>Sistema de Gesti칩n de Campa침as de Email Marketing</description>

    <!-- ============================================ -->
    <!-- Configuraci칩n de la Aplicaci칩n               -->
    <!-- ============================================ -->
    <context-param>
        <param-name>application.name</param-name>
        <param-value>Email Marketing</param-value>
    </context-param>

    <context-param>
        <param-name>application.version</param-name>
        <param-value>1.0.0</param-value>
    </context-param>

    <!-- ============================================ -->
    <!-- Welcome Files                                -->
    <!-- ============================================ -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- ============================================ -->
    <!-- Session Configuration                        -->
    <!-- ============================================ -->
    <session-config>
        <session-timeout>30</session-timeout>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

